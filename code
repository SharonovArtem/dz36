using System;
using System.Collections.Generic;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            List<int> mainArray = new List<int>(); ;
            List<int> array1 = new List<int>();
            List<int> array2 = new List<int>();
            int array1Lenght = 5;
            int array2Lenght = 6;

            WriteList(array1, array1Lenght, random);

            Console.Write("; ");

            WriteList(array2, array2Lenght, random);
            
            CombineArrays(mainArray,array1);
            CombineArrays(mainArray, array2);

            Console.WriteLine();

            ArrangeNumbers(mainArray);

            Console.WriteLine();

            for (int i = 0; i < mainArray.Count; i++)
            {
                Console.Write(mainArray[i] + ", ");
            }
        }

        static List<int> CombineArrays(List<int> mainArray,List<int> array)
        {

            for (int i = 0; i < array.Count; i++)
            {
                if (!mainArray.Contains(array[i]))
                {
                    mainArray.Add(array[i]);
                }
            }

            return mainArray;
        }

        static void WriteList(List<int> array, int arrayLenght, Random random)
        {
            for (int i = 0; i < arrayLenght; i++)
            {
                array.Add(random.Next(1, 9));
                Console.Write(array[i]);
            }
        }

        static List<int> ArrangeNumbers(List<int> array)
        {
            for (int i = 0; i < array.Count; i++)
            {
                for (int j = 0; j < array.Count; j++)
                {
                    int tempNumber;

                    if (array[i] < array[j])
                    {
                        tempNumber = array[j];

                        array[j] = array[i];
                        array[i] = tempNumber;
                    }
                }
            }

            return array;
        }
    }
}
