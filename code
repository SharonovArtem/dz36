using System;
using System.Collections.Generic;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            List<int> mainArray = new List<int>(); ;
            int[] array1 = new int[5];
            int[] array2 = new int[6];

            WriteList(array1, random);

            Console.Write("; ");

            WriteList(array2, random);
            
            CombineArrays(mainArray,array1);
            CombineArrays(mainArray, array2);

            Console.WriteLine();

            ArrangeNumbers(mainArray);

            Console.WriteLine();

            for (int i = 0; i < mainArray.Count; i++)
            {
                Console.Write(mainArray[i] + ", ");
            }
        }

        static List<int> CombineArrays(List<int> mainArray,int[] array)
        {

            for (int i = 0; i < array.Length; i++)
            {
                if (!mainArray.Contains(array[i]))
                {
                    mainArray.Add(array[i]);
                }
            }

            return mainArray;
        }

        static void WriteList(int[] array, Random random)
        {
            for (int i = 0; i < array.Length; i++)
            {
                array[i] = (random.Next(1, 9));
                Console.Write(array[i]);
            }
        }

        static List<int> ArrangeNumbers(List<int> mainArray)
        {
            for (int i = 0; i < mainArray.Count; i++)
            {
                for (int j = 0; j < mainArray.Count; j++)
                {
                    int tempNumber;

                    if (mainArray[i] < mainArray[j])
                    {
                        tempNumber = mainArray[j];

                        mainArray[j] = mainArray[i];
                        mainArray[i] = tempNumber;
                    }
                }
            }

            return mainArray;
        }
    }
}
