using System;
using System.Collections.Generic;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            List<int> array1 = new List<int>();
            int array1Lenght = 5;
            int array2Lenght = 6;
            List<int> array2 = new List<int>();
            List<int> tempArray1 = new List<int>();

            WriteList(array1, array1Lenght, random);

            Console.Write("; ");

            WriteList(array2, array2Lenght, random);

            if (array1Lenght >= array2Lenght)
            {
                CombineArrays(array2Lenght, array1, array2);

                RemoveSameNumbers(array1);

                Console.WriteLine();

                ArrangeNumbers(array1);

                Console.WriteLine();

                for (int i = 0; i < array1.Count; i++)
                {
                    Console.Write(array1[i] + ", ");
                }
            }
            else if (array2.Count > array1.Count)
            {
                CombineArrays(array1Lenght, array2, array1);

                RemoveSameNumbers(array2);

                Console.WriteLine();

                ArrangeNumbers(array2);

                Console.WriteLine();

                for (int i = 0; i < array2.Count; i++)
                {
                    Console.Write(array2[i] + ", ");
                }
            }
        }

        static void CombineArrays(int arrayLenght, List<int> array1, List<int> array2)
        {
            for (int i = 0; i < arrayLenght; i++)
            {
                if (array1.Contains(array2[i]))
                {
                    continue;
                }
                else
                {
                    array1.Add(array2[i]);
                }
            }
        }

        static void WriteList(List<int> array, int arrayLenght, Random random)
        {
            for (int i = 0; i < arrayLenght; i++)
            {
                array.Add(random.Next(1, 9));
                Console.Write(array[i]);
            }
        }

        static List<int> RemoveSameNumbers(List<int> array)
        {
            for (int i = 0; i < array.Count; i++)
            {
                for (int j = 0; j < array.Count; j++)
                {
                    if (array[i] == array[j] && i != j)
                    {
                        array.RemoveAt(i);
                    }
                }
            }

            return array;
        }

        static List<int> ArrangeNumbers(List<int> array)
        {
            for (int i = 0; i < array.Count; i++)
            {
                for (int j = 0; j < array.Count; j++)
                {
                    int tempNumber;

                    if (array[i] < array[j])
                    {
                        tempNumber = array[j];

                        array[j] = array[i];
                        array[i] = tempNumber;
                    }
                }
            }

            return array;
        }
    }
}
